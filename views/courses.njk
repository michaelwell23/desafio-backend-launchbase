{% extends "layout.njk"%}



{% block content %}

<div id="wrapper">
  <h1>Cursos</h1>
</div>

  <section class="cards">

{% for item in items %}
    <div class="card" id="{{  item.id }}">
      <div class="card__image-container">
        <img
          src="{{ item.image }}"
          alt="{{item.id}}">
      </div>
      <div class="card__content">
        <p>{{ item.id }}</p>
      </div>
      <div class="card__info">
        <p class="card__instructor ">{{item.instructor}}</p>
        <p class="card__price">{{item.price}}</p>
      </div>
    </div>
{% endfor %}
</section>


  <script src="script.js"></script>
{% endblock %}